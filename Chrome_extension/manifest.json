{
  "manifest_version": 3,
  "name": "LeetCode Session Tracker",
  "version": "1.0.0",
  "description": "Track coding sessions on LeetCode with detailed analytics.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "LeetCode Session Tracker",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "scripting", "activeTab", "alarms"],
  "host_permissions": ["*://leetcode.com/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://leetcode.com/*"]
    }
  ]
}
